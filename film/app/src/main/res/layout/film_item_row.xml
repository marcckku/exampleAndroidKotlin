<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filmRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/filmRowCardContainer"
        android:layout_width="326dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@android:color/white"
        app:shapeAppearanceOverlay="@dimen/small_xx"
        app:cardCornerRadius="@dimen/small_xx"
        app:cardElevation="12dp"    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ProgressBar
                android:id="@+id/filmProgressBar"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/filmImagine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_red"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                >
                <TextView
                    android:id="@+id/filmLabelFILM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Film"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/label_size_mediumx"
                    android:textStyle="normal|bold"
                    />
                <TextView
                    android:id="@+id/filmTitolo"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="center"
                    android:text="The Conjuring :\nThe Devil Made Me Do"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/label_size_mediumxx"
                    android:textStyle="normal|bold"
                    />
                <!--            <TextView-->
                <!--                android:id="@+id/filmSommario"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="120dp"-->
                <!--                android:layout_marginTop="0dp"-->
                <!--                android:ems="10"-->
                <!--                android:inputType="text"-->
                <!--                android:text="21/02/2020  15:30"-->
                <!--                android:textColor="@android:color/black"-->
                <!--                android:textSize="12sp"-->
                <!--                android:textStyle="normal"-->
                <!--                android:layout_marginLeft="95dp" />-->
                <TextView
                    android:id="@+id/filmLabelDATA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Data"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/label_size_mediumx"
                    android:textStyle="normal|bold"
                    />
                <TextView
                    android:id="@+id/filmDataRilascio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="21/02/2020  15:30"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/label_size_mediumxx"
                    android:textStyle="normal|bold"
                    />
        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>







